<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    tools:context=".SignInActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:shadowColor="#9A9595"
        android:padding="5dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/verify_text"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="20dp"
        android:gravity="center"

        android:background="@drawable/blue_oval"
        app:tint="#B6FDB9"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/verify_icon"
            android:id="@+id/verify_icon"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/verification"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"

            android:layout_below="@+id/verify_icon"
            android:layout_height="wrap_content">
        <EditText
            android:layout_marginRight="15dp"
            android:layout_width="170dp"
            android:id="@+id/verification_code"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:fontFamily="@font/roboto_regular"
            android:maxLength="6"
            android:padding="10dp"
            android:elevation="2dp"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/input_shape"
            android:hint="Enter code"/></LinearLayout>


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend verification code"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/resend_otp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_shape"
        android:backgroundTint="#006bd0"
        android:text="Verify"
        android:id="@+id/verify_btn"
        android:textAllCaps="false"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold" />
</LinearLayout>