<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006bd0"
        android:id="@+id/toolbar"
        android:gravity="center"
        android:orientation="horizontal"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:tint="#FFFF"
            android:id="@+id/back_btn"
            android:src="@drawable/back_icon"
            android:scaleType="center"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:layout_centerVertical="true"
  />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/country_code_back"
            android:hint="Search content..."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/back_btn"
            android:elevation="2dp"
            android:layout_centerVertical="true"
            android:id="@+id/search_input"
            android:padding="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#838080"
            android:elevation="2dp"
            android:src="@drawable/search_icon"
            android:scaleType="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/phone_number_back"
            android:padding="10dp"
            android:layout_alignTop="@id/search_input"
            android:layout_alignBottom="@id/search_input"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            />

/>

    </RelativeLayout></LinearLayout>

</RelativeLayout>